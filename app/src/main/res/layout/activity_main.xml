    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vision"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textSize="30sp"/>

</LinearLayout>
